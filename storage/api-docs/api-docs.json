        "/api/travel-request": {
            "post": {
                "tags": [
                    "Travel Requests"
                ],
                "summary": "Criar nova solicitação de viagem",
                "description": "Cria uma nova solicitação de viagem para o usuário autenticado",
                "operationId": "756f9b6b790c4b49459d4ebc04b5ac3f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "country",
                                    "departure_date",
                                    "return_date"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Viagem para Barcelona"
                                    },
                                    "country": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Espanha"
                                    },
                                    "departure_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-08-01"
                                    },
                                    "return_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-08-07"
                                    },
                                    "town": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Barcelona",
                                        "nullable": true
                                    },
                                    "state": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Catalunha",
                                        "nullable": true
                                    },
                                    "region": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Nordeste",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Solicitação de viagem criada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Solicitação de viagem criada com sucesso"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erros de validação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/travel-request/{travelRequestId}": {
            "get": {
                "tags": [
                    "Travel Requests"
                ],
                "summary": "Obter detalhes de uma solicitação de viagem",
                "description": "Retorna os detalhes de uma solicitação de viagem específica",
                "operationId": "8b7651f52cff8e07b1a9e7aa7fefcc97",
                "parameters": [
                    {
                        "name": "travelRequestId",
                        "in": "path",
                        "description": "ID da solicitação de viagem",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes da solicitação de viagem",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Solicitação de viagem encontrada com sucesso"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Solicitação de viagem não encontrada"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
