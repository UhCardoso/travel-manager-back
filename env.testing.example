# Laravel Testing Environment Configuration
# Copy this file to .env.testing and adjust values as needed

APP_NAME="Corporate Travel Manager - Testing"
APP_ENV=testing
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_TIMEZONE=UTC
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=4

LOG_CHANNEL=single
LOG_STACK=single
LOG_LEVEL=debug

# Database Configuration for Testing
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=testing
DB_USERNAME=sail
DB_PASSWORD=password

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Cache Configuration for Testing
CACHE_STORE=array
CACHE_PREFIX=testing

# Filesystem
FILESYSTEM_DISK=local

# Mail Configuration for Testing  
MAIL_MAILER=array
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration for Testing
QUEUE_CONNECTION=sync

# Session Configuration for Testing
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis (not needed for testing with array cache)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Testing Services Disabled
PULSE_ENABLED=false
TELESCOPE_ENABLED=false
NIGHTWATCH_ENABLED=false

# Vite (for asset compilation during testing)
VITE_APP_NAME="${APP_NAME}"

# Custom Testing Variables
TESTING_ADMIN_EMAIL=admin@test.com
TESTING_ADMIN_PASSWORD=test123
TESTING_USER_EMAIL=user@test.com
TESTING_USER_PASSWORD=test123
